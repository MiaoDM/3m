<!--pages/register/register.wxml-->

<view class="info" style="margin-top: 20%;">

	<view class="title">用户注册</view>

	<view class="row">
		<image class="pic" src="../../images/person.png"></image>
		<!--输入账号-->
		<input class="input" type="number" placeholder="姓名" bindinput="idInput"></input>
	</view>
	<view class="row">
		<image class="pic" src="../../images/person.png"></image>
		<!--输入密码-->
		<input class="input" type="number" placeholder="电话" maxlength="11" bindinput="getPhone"></input>
	</view>

	<view class="row">
		<image class="pic" src="../../images/person.png"></image>
		<!--输入邮箱-->
		<input class="input2"  placeholder="验证码" bindinput="getVCode"></input>
    <view class="text2" bindtap="getVC">获取验证码</view>
	</view>

	<view class="row">
		<image class="pic" src="../../images/person.png"></image>
		<!--输入公司-->
		<input class="input" placeholder="公司" bindinput="passwordInput"></input>
	</view>

	<view class="button" bindtap="UserRegister">确定</view>

</view>

